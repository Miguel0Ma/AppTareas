<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.gestortareas.controller.DashboardController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <Label text="Dashboard de Tareas" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <HBox spacing="20">
            <VBox spacing="5">
                <Label text="Total de Tareas:" />
                <Label fx:id="lblTotalTareas" text="0" style="-fx-font-size: 14px;" />
            </VBox>
            <VBox spacing="5">
                <Label text="Completadas:" />
                <Label fx:id="lblCompletadas" text="0" style="-fx-font-size: 14px;" />
            </VBox>
            <VBox spacing="5">
                <Label text="Pendientes:" />
                <Label fx:id="lblPendientes" text="0" style="-fx-font-size: 14px;" />
            </VBox>
        </HBox>
        <ListView fx:id="listTareasRecientes" prefHeight="200" />
        <HBox spacing="10">
            <Button fx:id="btnVerLista" text="Ver Lista Completa" onAction="#irAListaTareas" />
            <Button fx:id="btnAgregarTarea" text="Agregar Tarea" onAction="#irAAgregarTarea" />
        </HBox>
    </VBox>
</AnchorPane>
